<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- view background color -->
    <solid android:color="@color/transclucent_black"/>

    <!-- view border color and width -->
    <stroke android:width="0dp"/>

    <!-- If you want to add some padding -->
    <padding
        android:bottom="@dimen/spacing_4"
        android:left="@dimen/spacing_4"
        android:right="@dimen/spacing_4"
        android:top="@dimen/spacing_4"/>

    <!-- Here is the corner radius -->
    <corners
        android:topLeftRadius="@dimen/spacing_16"
        android:topRightRadius="@dimen/spacing_16"/>

</shape>